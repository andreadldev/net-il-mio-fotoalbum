
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - net_il_mio_fotoalbum</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/net_il_mio_fotoalbum.styles.css" asp-append-version="true" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js" integrity="sha512-fD9DI5bZwQxOi7MhYWnnNPlvXdp/2Pj3XSTRrFs5FQa4mizyGLnJcN6tuvUS6LbmgN1ut+XGSABKvjN0H6Aoow==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">net_il_mio_fotoalbum</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between me-5">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Photo" asp-action="ApiIndex">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container pb-3">
        <h1>Area amministrativa</h1>
        <div>
            <hr />
            <div class="row">
                <div class="col-md-3">
                   
                    <ul class="nav nav-pills flex-column">
                        <li class="nav-item p-2 px-3 text-center fw-bold border-bottom">ACCOUNT</li>
                        <li class="nav-item"><a class="nav-link" href="~/Identity/Account/Manage">Profilo</a></li>
                        <li class="nav-item"><a class="nav-link" href="~/Identity/Account/Manage/Email">Email</a></li>
                        <li class="nav-item"><a class="nav-link" href="~/Identity/Account/Manage/ChangePassword">Password</a></li>
                        <li class="nav-item p-2 px-3 text-center fw-bold border-top border-bottom">GESTIONE CONTENUTI</li>
                        @if (ViewData["photoActive"] as bool? ?? false)
                        {
                            <li class="nav-item"><a class="nav-link active" href="@Url.Action("Index", "Photo")">Galleria</a></li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Photo")">Galleria</a></li>
                        }
                       
                        @if (ViewData["categoryActive"] as bool? ?? false)
                        {
                            <li class="nav-item"><a class="nav-link active" href="@Url.Action("Index", "Category")">Categorie</a></li>
                        } else
                        {
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Category")">Categorie</a></li>
                        }

                        @if (ViewData["messageActive"] as bool? ?? false)
                        {
                            <li class="nav-item"><a class="nav-link active" href="@Url.Action("Index", "Message")">Messaggi</a></li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Message")">Messaggi</a></li>
                        }
                    </ul>

                </div>
                <div class="col-md-9">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - net_il_mio_fotoalbum - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
